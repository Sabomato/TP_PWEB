    <tbody>
@foreach (var item in Model) {
    var url = @Url.Action("GetImage", new { imageId = item.CoverImage.Id });
        <tr>
            <td>
                <div class="row">
                    <div class="col-sm">
                        <img src="@url"
                             width="200" height="200" alt="@item.Title"/>

                    </div>
                    <div class="col-sm">
                        <bold>@Html.DisplayFor(modelItem => item.Title)</bold>
                        <br />
                        @Html.DisplayFor(modelItem => item.Description)

                    </div>
                    <div class="col-sm">
                        @*adicionar rating*@
                        @Html.DisplayFor(modelItem => item.Rating)/10
                        <br />
                        @Html.DisplayFor(modelItem => item.Comodities)
                        <br />

                        @if (User.IsInRole(RoleNames.PropertyOwner))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }

                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>

                    </div>
                </div>
            <td>
             
            </td>
        </tr>
}
    </tbody>
</table>
