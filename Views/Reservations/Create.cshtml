@model TP_PWEB.Models.Reservation


<h1>Reservation</h1>

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>


            <input type="hidden" asp-for="IsReceived" />
            <input type="hidden" asp-for="IsDelivered" />
            <input type="hidden" asp-for="IsAccepted" />
            <input type="hidden" asp-for="Property" />

            @if (!Model.IsAvailable)
            {   
                <br />
                <div class="alert alert-secondary" role="alert">
                    @Model.Availability;
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Properties">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
