@model IEnumerable<TP_PWEB.Models.Reservation>



<h1>@ViewData["Title"]</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IsAccepted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IsAccepted)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Property.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.User.UserName)
            </td>
            <td>
                @if (!User.IsInRole(RoleNames.Client))
                {
                    <a  class = "btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                }

                <a class="btn btn-primary " asp-action="Details" asp-route-id="@item.Id">Details</a>
                @if (User.IsInRole(RoleNames.Client) && !item.IsAccepted)
                {
                    <a class= "btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }

            </td>
        </tr>
}
    </tbody>
</table>
