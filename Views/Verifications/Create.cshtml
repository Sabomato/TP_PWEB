@model TP_PWEB.Models.Verification

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Verification</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @{bool addAnother = false; }
        <form asp-action="Create" asp-route-addAnother="@addAnother">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="@Model.IsAtExit" class="form-control" />
                <select asp-for="@Model.IsAtExit" asp-items="@Model.Type" class="form-control">
                    <option value="">Please select the moment of verification</option>
                </select>
            </div>

            <input type="hidden" asp-for="@Model.PropertyId" />
            <br />
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Add another" class="btn btn-primary" @{addAnother = true;} />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Properties" asp-action="Create">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
