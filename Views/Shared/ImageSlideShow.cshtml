@model IEnumerable<Image>

<div class="col-sm border border-dark">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">

            @{
                var item = Model.DefaultIfEmpty(null).ElementAtOrDefault(0);
                string url;
                if (item != null)
                {
                    url = @Url.Action("GetImage","Properties", new { imageId = item.Id });
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@url" width="200" height="300" alt="@item.Name" />
                    </div>
                }
            }
            @for (int i = 1; i < Model.Count(); i++)
            {
                item = Model.ElementAt(i);
                url = @Url.Action("GetImage", new { imageId = item.Id });
                <div class="carousel-item">
                    <img class="d-block w-100" src="@url" width="200" height="300" alt="@item.Name" />
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
</div>

