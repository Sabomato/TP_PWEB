@model TP_PWEB.Models.Evaluation


@{var about = !Model.IsClient ? "Client" : "Stay"; }
<h4>Make a comment about the @about</h4>
<hr />
<div class="row">
    <div class="col-sm-5">
        <form asp-action="Create" asp-controller="Evaluations">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ReservationId" />
            <input type="hidden" asp-for="IsClient" />
            
            <div class="form-group col-5">
                <label style="font-weight:bold" asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label style="font-weight:bold" asp-for="Commentary" class="control-label"></label>
                <textarea style="resize:none" rows="5" cols="80" class="form-control" placeholder="Make a Comment" asp-for="Commentary" ></textarea>
                <span asp-validation-for="Commentary" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Publish" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>
<br/>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
